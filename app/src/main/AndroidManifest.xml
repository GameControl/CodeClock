<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.gamecontrol.codeclock" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_intwined_48x48"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.gamecontrol.codeclock.HomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.gamecontrol.codeclock.JobActivity"
            android:label="@string/title_activity_job"
            android:screenOrientation="portrait" />

        <service
            android:name="org.gamecontrol.codeclock.TimeService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="org.gamecontrol.codeclock.ProjectActivity"
            android:label="@string/title_activity_project"
            android:screenOrientation="portrait" />
        <activity
            android:name="org.gamecontrol.codeclock.CreateProjectActivity"
            android:label="@string/title_activity_create_project"
            android:screenOrientation="portrait" />
        <activity
            android:name="org.gamecontrol.codeclock.CreateJobActivity"
            android:label="@string/title_activity_create_job"
            android:screenOrientation="portrait" />
        <activity
            android:name="org.gamecontrol.codeclock.SettingsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="org.gamecontrol.codeclock.JobSettingsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_job_settings" >
        </activity>
        <activity
            android:name="org.gamecontrol.codeclock.ProjectSettingsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_project_settings" >
        </activity>
        <activity
            android:name="org.gamecontrol.codeclock.TagActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_tag" >
        </activity>
        <activity
            android:name="org.gamecontrol.codeclock.DescriptionActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_description" >
        </activity>
    </application>

</manifest>
